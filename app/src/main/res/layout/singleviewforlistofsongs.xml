<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/whole_item_list_of_songs"
    >
    <ImageView
        android:id="@+id/image_of_list_of_songs"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:src="@drawable/bahubali"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/tv_name_of_list_of_songs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_of_list_of_songs"
        android:text="Sahoo rey Bahubali"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="7:48"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/tv_name_of_list_of_songs"
        />
    <ImageView
        android:id="@+id/play_button_list_of_songs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_play_arrow"
        android:layout_centerInParent="true"
        />
</RelativeLayout>